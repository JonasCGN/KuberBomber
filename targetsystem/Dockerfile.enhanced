# Dockerfile para criar uma versão da aplicação com ferramentas de debug
FROM iuresf/apprunner:latest

# Instalar ferramentas essenciais para debug e injeção de falhas
RUN apt update -qq && \
    apt install -y -qq \
    procps \
    psmisc \
    util-linux \
    coreutils \
    net-tools \
    iputils-ping \
    curl \
    wget \
    && rm -rf /var/lib/apt/lists/* \
    && apt clean

